<suki:SukiWindow xmlns="https://github.com/avaloniaui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:vm="using:FocusTime.ViewModels"
                 xmlns:converters="using:FocusTime.Converters"
                 xmlns:suki="https://github.com/kikipoulet/SukiUI"
                 x:Class="FocusTime.Views.MainWindow"
                 x:DataType="vm:MainWindowViewModel"
                 Icon="/Assets/avalonia-logo.ico"
                 Title="FocusTime"
                 Width="400" Height="600"
                 MinWidth="380" MinHeight="580"
                 WindowStartupLocation="CenterScreen"
                 CanResize="True"
                 Topmost="{Binding IsTopmost}">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<suki:SukiWindow.Resources>
		<converters:ProgressToPathConverter x:Key="ProgressToPath"/>
	</suki:SukiWindow.Resources>

	<Grid Margin="20">
		<!-- 顶部按钮组 -->
		<StackPanel Orientation="Horizontal"
					HorizontalAlignment="Right"
					VerticalAlignment="Top"
					Spacing="10"
					Margin="0,10,10,0">
			
			<!-- 悬浮条按钮 -->
			<Button Background="Transparent"
					BorderThickness="0"
					Padding="0"
					Width="20" Height="20"
					ToolTip.Tip="{Binding IsFloatingBarMode, Converter={x:Static converters:BoolToFloatingBarTooltipConverter.Instance}}"
					Command="{Binding ToggleFloatingBarCommand}">
				<PathIcon Data="{Binding IsFloatingBarMode, Converter={x:Static converters:BoolToFloatingBarIconConverter.Instance}}"
						  Width="20" Height="20"/>
			</Button>
			
			<!-- 置顶按钮 -->
			<Button Background="Transparent"
					BorderThickness="0"
					Padding="0"
					Width="20" Height="20"
					ToolTip.Tip="{Binding IsTopmost, Converter={x:Static converters:BoolToTopmostTooltipConverter.Instance}}"
					Command="{Binding ToggleTopmostCommand}">
				<PathIcon Data="{Binding IsTopmost, Converter={x:Static converters:BoolToTopIconConverter.Instance}}"
						  Width="20" Height="20"/>
			</Button>
			
			<!-- 设置按钮 -->
			<Button Background="Transparent"
					BorderThickness="0"
					Padding="0"
					Width="20" Height="20"
					ToolTip.Tip="设置"
					Command="{Binding OpenSettingsCommand}">
				<PathIcon Data="M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8M12,10A2,2 0 0,0 10,12A2,2 0 0,0 12,14A2,2 0 0,0 14,12A2,2 0 0,0 12,10M10,22C9.75,22 9.54,21.82 9.5,21.58L9.13,18.93C8.5,18.68 7.96,18.34 7.44,17.94L4.95,18.95C4.73,19.03 4.46,18.95 4.34,18.73L2.34,15.27C2.21,15.05 2.27,14.78 2.46,14.63L4.57,12.97L4.5,12L4.57,11.03L2.46,9.37C2.27,9.22 2.21,8.95 2.34,8.73L4.34,5.27C4.46,5.05 4.73,4.96 4.95,5.05L7.44,6.05C7.96,5.66 8.5,5.32 9.13,5.07L9.5,2.42C9.54,2.18 9.75,2 10,2H14C14.25,2 14.46,2.18 14.5,2.42L14.87,5.07C15.5,5.32 16.04,5.66 16.56,6.05L19.05,5.05C19.27,4.96 19.54,5.05 19.66,5.27L21.66,8.73C21.79,8.95 21.73,9.22 21.54,9.37L19.43,11.03L19.5,12L19.43,12.97L21.54,14.63C21.73,14.78 21.79,15.05 21.66,15.27L19.66,18.73C19.54,18.95 19.27,19.04 19.05,18.95L16.56,17.95C16.04,18.34 15.5,18.68 14.87,18.93L14.5,21.58C14.46,21.82 14.25,22 14,22H10M11.25,4L10.88,6.61C9.68,6.86 8.62,7.5 7.85,8.39L5.44,7.35L4.69,8.65L6.8,10.2C6.4,11.37 6.4,12.64 6.8,13.8L4.68,15.36L5.43,16.66L7.86,15.62C8.63,16.5 9.68,17.14 10.87,17.38L11.24,20H12.76L13.13,17.39C14.32,17.14 15.37,16.5 16.14,15.62L18.57,16.66L19.32,15.36L17.2,13.81C17.6,12.64 17.6,11.37 17.2,10.2L19.31,8.65L18.56,7.35L16.15,8.39C15.38,7.5 14.32,6.86 13.12,6.62L12.75,4H11.25Z"
						  Width="20" Height="20"/>
			</Button>
		</StackPanel>

		<!-- 主内容卡片 -->
		<suki:GlassCard HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Width="350" Height="450"
						Padding="30">
			<StackPanel HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Spacing="30">

				<!-- 进度环和时间显示 -->
				<StackPanel Spacing="25" HorizontalAlignment="Center">
					<!-- 时间显示 -->
					<TextBlock Text="{Binding TimeDisplay}"
							   FontSize="48"
							   FontWeight="Bold"
							   HorizontalAlignment="Center"
							   FontFamily="Consolas, monospace"/>

					<!-- 进度条 -->
					<ProgressBar Value="{Binding Progress}"
								 Maximum="100"
								 Height="10"
								 Width="250"
								 CornerRadius="5"/>

					<!-- 状态文本 -->
					<TextBlock Text="{Binding SessionTypeText}"
							   FontSize="16"
							   FontWeight="Medium"
							   HorizontalAlignment="Center"
							   Opacity="0.8"/>
				</StackPanel>

				<!-- 控制按钮 -->
				<StackPanel Orientation="Horizontal"
							HorizontalAlignment="Center"
							Spacing="15">
					<!-- 重置按钮 -->
					<Button Width="50" Height="50"
							CornerRadius="25"
							Command="{Binding ResetCommand}"
							ToolTip.Tip="重置"
							Padding="0"
							HorizontalContentAlignment="Center"
							VerticalContentAlignment="Center">
						<PathIcon Data="M12,5V1L7,6L12,11V8C15.31,8 18,10.69 18,14C18,17.31 15.31,20 12,20C8.69,20 6,17.31 6,14H4C4,18.42 7.58,22 12,22C16.42,22 20,18.42 20,14C20,9.58 16.42,6 12,6V5Z"
								  Width="22" Height="22"
								  Margin="0,-1,0,0"/>
					</Button>
					
					<!-- 主按钮 -->
					<Button Width="80" Height="80"
							CornerRadius="40"
							Classes="Primary"
							Command="{Binding StartPauseCommand}"
							Padding="0"
							HorizontalContentAlignment="Center"
							VerticalContentAlignment="Center">
						<PathIcon Data="{Binding StartPauseButtonIcon}" 
								  Width="32" Height="32"
								  Margin="0,0,0,0"/>
					</Button>
					
					<!-- 跳过按钮 -->
					<Button Width="50" Height="50"
							CornerRadius="25"
							Command="{Binding SkipSessionCommand}"
							ToolTip.Tip="跳过"
							Padding="0"
							HorizontalContentAlignment="Center"
							VerticalContentAlignment="Center">
						<PathIcon Data="M4,18L12.5,12L4,6V18ZM13.5,6V18L22,12L13.5,6Z"
								  Width="22" Height="22"
								  Margin="1,0,0,0"/>
					</Button>
				</StackPanel>

				<!-- 番茄计数器 -->
				<ItemsControl ItemsSource="{Binding SessionDots}"
							  HorizontalAlignment="Center">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<StackPanel Orientation="Horizontal" Spacing="8"/>
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Ellipse Width="10" Height="10">
								<Ellipse.Fill>
									<SolidColorBrush Color="{Binding Color}"/>
								</Ellipse.Fill>
							</Ellipse>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</StackPanel>
		</suki:GlassCard>
	</Grid>
</suki:SukiWindow>
